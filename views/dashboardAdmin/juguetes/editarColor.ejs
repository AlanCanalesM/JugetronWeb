<%- include ../templates/header_main.ejs %>
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                            <h6 class="text-white text-capitalize ps-3">Editar Color</h6>
                        </div>
                    </div>
                    <div class="card-body p-3 pb-0">
                        <form class="mt-4 mb-0 " action="../../color/actualizar/" method="POST">
                            <input hidden type="text" class="form-control" id="id_color" name="id_color" value="<%= juguetes.id_color %>" tabindex="1">
                            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                                <div class="input-group input-group-outline">
                                    <label class="form-label">Nombre Comleto...</label>
                                    <input type="text" class="form-control" id="descripcion" name="descripcion"
                                        value="<%= juguetes.descripcion %>" tabindex="2">
                                </div>
                            </div>

                            <div class="mt-4 mb-0">
                                <button type="submit" class="btn btn-outline-info" tabindex="3">Guardar</button>
                                <a href="/dashboardAdmin/color" class="btn btn-outline-danger">Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include ../templates/footer_main.ejs %>