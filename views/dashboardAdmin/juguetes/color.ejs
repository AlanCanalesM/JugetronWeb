<%- include ../templates/header_main.ejs %>

    <div class="container-fluid">
        <h4 class="m-0 font-weight-bold " style="color: #293a4a;">Colores</h4>
        <a href="/dashboardAdmin/createColor" class="btn btn-outline-primary mt-4"><i
                class="material-icons text-sm">add</i>Nuevo Color</a>
    </div>
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                            <h6 class="text-white text-capitalize ps-3">Tabla de Colores</h6>
                        </div>
                    </div>
                    <div class="card-body px-0 pb-2">
                        <div class="table-responsive p-0">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                            ID</th>
                                        <th
                                            class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                            DESCRIPCIÃ“N</th>
                                        <th
                                            class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                            ACCIONES</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(let color=0; color < juguetes.length; color++) { %>

                                        <tr>
                                            <td class="align-middle">
                                                <%= juguetes[color].id_color %>
                                            </td>
                                            <td class="align-middle">
                                                <%= juguetes[color].descripcion %>
                                            </td>
                                            <td class="align-middle">
                                                <div class="btn-group-vertical" role="group"
                                                    aria-label="Vertical button group">
                                                    <form class="form-inline" method="get"
                                                        action="/dashboardAdmin/editarColor/editar/<%= juguetes[color].id_color %>">
                                                        <button class="btn btn-outline-info"
                                                            type="submit">Editar</button>
                                                    </form>
                                                </div>
                                                <div class="btn-group-vertical" role="group"
                                                    aria-label="Vertical button group">
                                                    <form class="form-inline" method="post"
                                                        action="/dashboardAdmin/color/eliminar/<%= juguetes[color].id_color %>">
                                                        <button class="btn btn-outline-danger"
                                                            type="submit">Borrar</button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--End Table-->
    </div>
    <%- include ../templates/footer_main.ejs %>