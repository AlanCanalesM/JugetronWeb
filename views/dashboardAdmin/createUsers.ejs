<%- include templates/header_main.ejs %>
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                            <h6 class="text-white text-capitalize ps-3">Registrar Nuevo Usuario</h6>
                        </div>
                    </div>
                    <div class="card-body p-3 pb-0">
                        <form class="mt-4 mb-0 " action="/dashboardAdmin" method="POST">
                            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                                <div class="input-group input-group-outline">
                                    <label class="form-label">Nombre Comleto...</label>
                                    <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1">
                                </div>
                            </div>
                            <div class="ms-md-auto pe-md-3 d-flex align-items-center mt-4">
                                <div class="input-group input-group-outline">
                                    <label class="form-label">UserName...</label>
                                    <input type="text" class="form-control" id="username" name="username" tabindex="2">
                                </div>
                            </div>

                            <div class="pe-md-3 mt-4">
                                <div class="input-group input-group-outline">
                                    <label class="form-label">Contrase√±a...</label>
                                    <input type="password" class="form-control" id="password" name="password" tabindex="3">
                                    <button id="show_password" class="btn btn-primary" type="button"
                                        onclick="showPass()"> <span class="fa fa-eye-slash icon"></span>
                                    </button>
                                </div>
                            </div>
                            <div class="ms-md-auto pe-md-3 d-flex align-items-center mt-4">
                                <div class="input-group input-group-outline">
                                    <label class="form-label">Correo Electronico...</label>
                                    <input type="email" class="form-control" id="email" name="email" tabindex="4">
                                </div>
                            </div>

                            <div class="mt-4 mb-0">
                                <button type="submit" class="btn btn-outline-info" tabindex="5">Guardar</button>
                                <a href="/dashboardAdmin/ctrlUsuarios" class="btn btn-outline-danger">Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include templates/footer_main.ejs %>