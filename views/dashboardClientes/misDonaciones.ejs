<%- include templates/dashUsuariosHeader.ejs %>

    <div class="container-fluid mt-7">
        <div class="container-responsive col-md-12 mb-4">
            <a href="/dashboardClientes/clientesDonar" class="btn btn-danger mt-4 text-light">Hacer Una Donación</a>
        </div>
        <div class="col">

            <div class="card shadow mb-4">
                <div class="card-header border-200">
                    <h3 class="mb-0">Mis Donaciones</h3>
                </div>

                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th class="text-info" scope="col">ID</th>
                                <th class="text-info" scope="col">Usuario</th>
                                <th class="text-info" scope="col">CONTENEDOR</th>
                                <th class="text-info" scope="col">DESCRIPCIÓN</th>
                                <th class="text-info" scope="col">COLOR</th>
                                <th class="text-info" scope="col">IDENTIFICACION</th>
                                <th class="text-info" scope="col">CLASIFICACION</th>
                                <th class="text-info" scope="col">CANTIDAD</th>
                                <th class="text-info" scope="col">FECHA</th>
                                <th class="text-info" scope="col"></th>

                            </tr>
                        </thead>
                        <tbody>
                            <% for(let donacion=0; donacion < donar.length; donacion++) { %>
                                <tr>
                                    <td>
                                        <%= donar[donacion].id_donacion %>
                                    </td>
                                    <td>
                                        <%= donar[donacion].Usuario %>
                                    </td>
                                    <td>
                                        <%= donar[donacion].Contenedor %>
                                    </td>
                                    <td>
                                        <%= donar[donacion].descripcion %>
                                    </td>
                                    <td>
                                        <%= donar[donacion].Color %>
                                    </td>
                                    <td>
                                        <%= donar[donacion].Tipo %>
                                    </td>
                                    <td>
                                        <%= donar[donacion].Clasificacion %>
                                    </td>
                                    <td>
                                        <%= donar[donacion].cantidad %>
                                    </td>
                                    <td>
                                        <%= donar[donacion].fecha %>
                                    </td>

                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer py-4">
                    <nav aria-label="...">
                        <ul class="pagination justify-content-end mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">
                                    <i class="fas fa-angle-left"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="fas fa-angle-right"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- Table -->






    <!-- /.container-fluid -->
    <!-- /.container-fluid -->
    <!-- Jquery JS-->

    </div>
    <!-- End of Main Content -->
    <script type="text/javascript">
          
        window.addEventListener('load', function(){
          
            alert('<%= nombre %>');
            document.getElementById("usuario").innerHTML='<%= nombre %>';
           
        });
      </script>
    <%- include templates/dashUsuariosFooter.ejs %>