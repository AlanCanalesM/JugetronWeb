                                                    <button id="show_password" class="btn btn-primary" type="button"
                                                        onclick="showPass()"> <span
                                                            class="fa fa-eye-slash icon"></span>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                     <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Email</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0" id="email">(098) 765-4321</p>
                                        </div>
                                    </div>
                                    <hr>
                                    
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </section>
        </div>
    </div>



</div>
</div>

