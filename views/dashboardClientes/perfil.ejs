<%- include templates/header_main.ejs %>
<div class="container-fluid">

    <!-- Page Heading -->

    <!-- Brand Buttons -->
    <div class="card shadow mb-4" >
        <div class="card-header py-3" >
            <h4 class="m-0 font-weight-bold  text-danger" >Mi Perfil</h4>
        </div>
        <div class="card-body"  style="background-color: #e53371;">
            <section >
                <div class="container py-5">

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <img src="/images/perfil.webp" alt="avatar" class="rounded-circle img-fluid"
                                        style="width: 150px;">
                                    <h5 class="my-3" id="nombre">John Smith</h5>
                                    <p class="text-muted mb-1" id="tipo">Administrador</p>
                                    <!---<p class="text-muted mb-4">Bay Area, San Francisco, CA</p>--->

                                </div>
                            </div>

                        </div>
                        <div class="col-lg-8">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Nombre </p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0" id="nombre1">Johnatan Smith</p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Cuenta</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0" id="username">example@example.com</p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Contrase√±a</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <div class="input-group">
                                                <input ID="password" type="password" Class="form-control">
