<%- include templates/header_main.ejs %>
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Donar un Juguete</h6>
                    </div>
                </div>
                <div class="card-body p-3 pb-0">
                    <form class="col-md-12 mb-4 mt-4" action="/dashboardClientes/misDonaciones" method="POST">
                        <div class="form-row">
                            <div class=" ms-md-auto pe-md-3 d-flex align-items-center mt-4">
                                <div class="input-group input-group-outline">
                                    <select class="form-control" id="id_cont" tabindex="3" name="id_cont">
        
                                        <option selected>Elige una contenedor de entrega...</option>
                                        <% for(let ubi=0; ubi < ubicacion.length; ubi++) { %>
                                            <option>
                                                <%= ubicacion[ubi].id_ubi%>
                                                    <%= ubicacion[ubi].descripcion%>
                                            </option>
                                            <% }%>
                                    </select>
                                </div>
                            </div>
                            <div class=" ms-md-auto pe-md-3 d-flex align-items-center mt-4">
                                <div class="input-group input-group-outline">
                                    <select class="form-control" id="cantidad" tabindex="3" name="cantidad">
        
                                        <option selected>Elige una Cantidad de un mismo Juguete...</option>
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class=" ms-md-auto pe-md-3 d-flex align-items-center mt-4">
                                <div class="input-group input-group-outline">
                                    <select class="form-control" id="id_iden" tabindex="3" name="id_iden">
        
                                        <option selected>Elige una tipo de Juguete...</option>
                                        <% for(let Iden=0; Iden < identificacion.length; Iden++) { %>
                                            <option>
                                                <%= identificacion[Iden].id_iden%>
                                                    <%= identificacion[Iden].descripcionIden%>
                                            </option>
                                            <% }%>
                                    </select>
                                </div>
                            </div>
                            <div class=" ms-md-auto pe-md-3 d-flex align-items-center mt-4">
                                <div class="input-group input-group-outline">
                                    <select class="form-control" id="id_clas" tabindex="3" name="id_clas">
        
                                        <option selected>Se clasifica como...</option>
                                        <% for(let clas=0; clas < clasificacion.length; clas++) { %>
                                            <option>
                                                <%= clasificacion[clas].id_clas%>
                                                    <%= clasificacion[clas].descripcionClas%>
                                            </option>
                                            <% }%>
                                    </select>
                                </div>
                            </div>
                            <div class=" ms-md-auto pe-md-3 d-flex align-items-center mt-4">
                                <div class="input-group input-group-outline">
                                    <select class="form-control" id="id_color" tabindex="3" name="id_color">
        
                                        <option selected>Elige un Color...</option>
                                        <% for(let col=0; col < color.length; col++) { %>
                                            <option>
                                                <%= color[col].id_color%>
                                                    <%= color[col].descripcion%>
                                            </option>
                                            <% }%>
                                    </select>
                                </div>
                            </div>
                        </div>
        
                        <div class="form-row">
                            <div class=" ms-md-auto pe-md-3 d-flex align-items-center mt-4 mb-4">
                                <div class="input-group input-group-outline">
                                    <label class="form-label" for="exampleFormControlTextarea1">Descripci√≥n</label>
                                    <input type="text" class="form-control" id="descripcion" name="descripcion" tabindex="1">
                                </div>
                            </div>
                        </div>
        
                        <button type="submit" class="btn btn-outline-info" tabindex="5">Guardar</button>
                        <a href="/dashboardClientes" class="btn btn-outline-danger">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include templates/footer_main.ejs %>