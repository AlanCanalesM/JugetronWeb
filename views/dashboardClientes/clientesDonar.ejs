<%- include templates/dashUsuariosHeader.ejs %>
    <div class="container-fluid">

        <!-- Page Heading -->

        <!-- DataTales Example -->
        <div class="card shadow mt-7 mb-4">

            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-danger">Donar un Juguete</h4>
            </div>

            <!-- Inicio Formularios col-md-12 mb-4 mt-4 -->
            <form class="col-md-12 mb-4 mt-4" action="/dashboardClientes/misDonaciones" method="POST">

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputState">Lugar de entrega</label>
                        <select id="id_cont" name="id_cont" class="form-control">
                            <option selected>Elige una contenedor de entrega......</option>
                            <% for(let ubi=0; ubi < ubicacion.length; ubi++) { %>
                                <option>
                                    <%= ubicacion[ubi].id_ubi%>
                                    <%= ubicacion[ubi].descripcion%>
                                       <!----> 
                                </option>
                                <%}%>

                        </select>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="exampleFormControlSelect1">Cantidad</label>
                        <select class="form-control" id="cantidad" name="cantidad">
                            <option selected>Elige una Cantidad de un mismo Juguete...</option>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>

                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputState">Tipo de Juguete</label>
                        <select id="id_iden" name="id_iden" class="form-control">
                            <option selected>Elige un tipo...</option>
                            <% for(let Iden=0; Iden < identificacion.length; Iden++) { %>
                                <option>
                                    <%= identificacion[Iden].id_iden%>
                                    <%= identificacion[Iden].descripcionIden%>
                                      <!---->  
                                </option>
                                <%}%>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputState">Clasificación</label>
                        <select id="id_clas" name="id_clas" class="form-control">
                            <option selected>Se clasifica como...</option>
                            <% for(let clas=0; clas < clasificacion.length; clas++) { %>
                                <option>
                                    <%= clasificacion[clas].id_clas%>
                                    <%= clasificacion[clas].descripcionClas%>
                                   <!----> 
                                </option>
                                <%}%>
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputState">Color</label>
                        <select id="id_color" name="id_color" class="form-control">
                            <option selected>Elige un Color...</option>
                            <% for(let col=0; col < color.length; col++) { %>
                            <option>
                                <%= color[col].id_color%>
                                <%= color[col].descripcion%>
                                   <!----> 
                            </option>
                            <%}%>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="exampleFormControlTextarea1">Descripción</label>
                        <textarea class="form-control" id="descripcion" name="descripcion" rows="3"></textarea>
                    </div>

                </div>

                <button type="submit" class="btn btn-outline-info" tabindex="5">Guardar</button>
                <a href="/dashboardClientes" class="btn btn-outline-danger">Cancelar</a>
            </form>
        </div>


    </div>
    </div>



    <%- include templates/dashUsuariosFooter.ejs %>